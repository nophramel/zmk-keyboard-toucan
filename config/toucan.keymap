#include "keys_de_swiss.h"
#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/pointing.h>

#define MAC     0
#define MACNUM  1
#define MACNAV  2
#define WIN     3
#define WINUM   4
#define WINAV   5
#define BLTOPT  6

/ {
    conditional_layers {
        compatible = "zmk,conditional-layers";

        mac_tri_layer {
            if-layers = <1 2>;
            then-layer = <6>;
        };

        win_tri_layer {
            if-layers = <4 5>;
            then-layer = <6>;
        };
    };

    behaviors {
        hmr: hmr {
            compatible = "zmk,behavior-hold-tap";
            label = "HMR";
            bindings = <&kp>, <&kp>;

            #binding-cells = <2>;
            tapping-term-ms = <190>;
            quick-tap-ms = <175>;
            flavor = "balanced";
            hold-trigger-key-positions = <0 1 2 3 4 5 12 13 14 15 16 17 24 25 26 27 28 29 36 37 38 39 40 41>;
            hold-trigger-on-release;
        };

        hml: hml {
            compatible = "zmk,behavior-hold-tap";
            label = "HML";
            bindings = <&kp>, <&kp>;

            #binding-cells = <2>;
            tapping-term-ms = <190>;
            quick-tap-ms = <175>;
            flavor = "balanced";
            hold-trigger-key-positions = <11 6 7 8 9 10 11 18 19 20 21 22 23 30 31 32 33 34 35 39 40 41 36 37 38>;
            hold-trigger-on-release;
        };
    };

    combos {
        compatible = "zmk,combos";

        CAPZ {
            bindings = <&kp CAPSLOCK>;
            key-positions = <12 13>;
            layers = <0 3>;
        };

        CAPZ_WORD {
            bindings = <&caps_word>;
            key-positions = <16 19>;
            layers = <0 3>;
        };

        to_WIN {
            bindings = <&to 3>;
            key-positions = <39 38>;
            layers = <0>;
        };

        to_MAC {
            bindings = <&to 0>;
            key-positions = <38 39>;
            layers = <3>;
        };

        left_hand_right_click {
            bindings = <&mkp RCLK>;
            key-positions = <27 26>;
        };

        left_hand_middle_click {
            bindings = <&mkp MCLK>;
            key-positions = <27 26 28>;
        };

        right_hand_right_click {
            bindings = <&mkp RCLK>;
            key-positions = <32 33>;
        };

        right_hand_middle_click {
            bindings = <&mkp MCLK>;
            key-positions = <31 32 33>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        default_mac {
            label = "MAC";
            display-name = "MAC";
            bindings = <
&kp ESCAPE  &kp Q  &kp W  &kp E  &kp R  &kp T  &kp DE_Z  &kp U  &kp I  &kp O  &kp P  &kp LEFT_BRACKET  &kp DELETE  &hml LEFT_CONTROL A  &hml LEFT_ALT S  &hml LEFT_GUI D  &hml LEFT_SHIFT F  &kp G  &kp H  &hmr RSHIFT J  &hmr RIGHT_GUI K  &hmr RIGHT_ALT L  &hmr RIGHT_CONTROL SEMI  &kp SQT  &kp LSHFT  &kp DE_Y  &kp X  &kp C  &kp V  &kp B  &kp N  &kp M  &kp COMMA  &kp DOT  &kp FSLH  &kp RIGHT_SHIFT  &mo 1  &lt 2 TAB  &hml LG(LEFT_ALT) SPACE  &hmr LA(LC(LEFT_GUI)) BACKSPACE  &lt 1 ENTER  &mo 2
            >;
        };

        mac_raise_layer {
            label = "MACNUM";
            display-name = "MAC NUM";
            bindings = <
&kp DE_LESS_THAN  &kp DE_EXCLAMATION  &kp DE_DOUBLE_QUOTES  &hml DE_HASH DE_STAR  &hml DE_CENT DE_C_CEDILLA  &kp DE_PERCENT  &hmr DE_NOT DE_AMPS  &hmr DE_SLASH DE_N7  &hmr DE_LEFT_PARENTHESIS DE_N8  &hmr DE_RIGHT_PARENTHESIS DE_N9  &hmr DE_ACUTE DE_SINGLE_QUOTE  &hmr DE_GRAVE DE_QMARK  &hml DE_POUND_SIGN DE_DOLLAR  &hml LEFT_CONTROL NUMBER_1  &hml LEFT_ALT DE_SECTION  &hml LEFT_GUI DE_EQUAL  &hml LEFT_SHIFT LS(DE_SECTION)  &kp LA(DE_N)  &kp DE_PLUS  &hmr RIGHT_SHIFT DE_N4  &hmr RIGHT_GUI DE_N5  &hmr RIGHT_ALT DE_N6  &hmr RIGHT_CONTROL RA(RETURN)  &hmr DE_BROKEN_BAR DE_PIPE  &kp DE_CARET  &trans  &kp DE_AT  &hml LA(DE_N8) LA(DE_N5)  &hml LA(DE_N9) LA(DE_N6)  &kp DE_UMLAUT  &kp DE_MINUS  &kp N1  &kp N2  &kp N3  &kp DE_PERIOD  &kp RS(RA(N7))  &trans  &trans  &kp BACKSPACE  &kp BACKSPACE  &trans  &kp N0
            >;
        };

        mac_lower_layer {
            label = "MACNAV";
            display-name = "MAC NAV";
            bindings = <
&kp F1  &kp F2  &kp F3  &kp F4  &kp F5  &kp F6  &kp F7  &kp F8  &kp F9  &kp F10  &kp F11  &kp F12  &trans  &kp HOME  &kp PAGE_UP  &kp C_PREV  &kp C_PLAY_PAUSE  &kp C_NEXT  &trans  &kp LEFT_ARROW  &kp DOWN_ARROW  &kp UP_ARROW  &kp RIGHT_ARROW  &trans  &trans  &kp END  &kp PAGE_DOWN  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &kp LS(LG(NUMBER_5))  &kp LS(LG(NUMBER_4))  &trans
            >;
        };

        win_layer {
            label = "WIN";
            display-name = "WIN";
            bindings = <
&kp ESCAPE  &kp Q  &kp W  &kp E  &kp R  &kp T  &kp DE_Z  &kp U  &kp I  &kp O  &kp P  &kp LEFT_BRACKET  &kp DELETE  &hml LEFT_CONTROL A  &hml LEFT_ALT S  &hml LEFT_GUI D  &hml LEFT_SHIFT F  &kp G  &kp H  &hmr RSHIFT J  &hmr RIGHT_GUI K  &hmr RIGHT_ALT L  &hmr RIGHT_CONTROL SEMI  &kp SQT  &kp LSHFT  &kp DE_Y  &kp X  &kp C  &kp V  &kp B  &kp N  &kp M  &kp COMMA  &kp DOT  &kp FSLH  &kp RIGHT_SHIFT  &mo 4  &lt 5 TAB  &kp SPACE  &kp BACKSPACE  &lt 4 ENTER  &mo 5
            >;
        };

        win_raise_layer {
            label = "WINUM";
            display-name = "WIN NUM";
            bindings = <
&kp DE_SECTION  &kp DE_EXCLAMATION  &kp DE_DOUBLE_QUOTES  &hml DE_HASH DE_STAR  &hml DE_CENT DE_C_CEDILLA  &kp DE_PERCENT  &hmr DE_NOT DE_AMPS  &hmr DE_SLASH DE_N7  &hmr DE_LEFT_PARENTHESIS DE_N8  &hmr DE_RIGHT_PARENTHESIS DE_N9  &hmr DE_ACUTE DE_SINGLE_QUOTE  &hmr DE_GRAVE DE_QMARK  &hml DE_POUND_SIGN DE_DOLLAR  &hml LEFT_CONTROL NUMBER_1  &hml LEFT_ALT DE_SECTION  &hml LEFT_GUI DE_EQUAL  &hml LEFT_SHIFT LS(DE_SECTION)  &kp DE_TILDE  &kp DE_PLUS  &hmr RIGHT_SHIFT DE_N4  &hmr RIGHT_GUI DE_N5  &hmr RIGHT_ALT DE_N6  &hmr RIGHT_CONTROL RETURN  &hmr DE_BROKEN_BAR DE_PIPE  &kp DE_CARET  &trans  &kp DE_AT  &hml DE_LEFT_BRACKET DE_LEFT_BRACE  &hml DE_RIGHT_BRACKET DE_RIGHT_BRACE  &kp DE_UMLAUT  &kp DE_MINUS  &kp N1  &kp N2  &kp N3  &kp DE_PERIOD  &kp DE_BACKSLASH  &trans  &trans  &kp BACKSPACE  &kp BACKSPACE  &trans  &kp N0
            >;
        };

        win_lower_layer {
            label = "WINAV";
            display-name = "WIN NAV";
            bindings = <
&kp F1  &kp F2  &kp F3  &kp F4  &kp F5  &kp F6  &kp F7  &kp F8  &kp F9  &kp F10  &kp F11  &kp F12  &trans  &kp HOME  &kp PAGE_UP  &kp C_PREV  &kp C_PLAY_PAUSE  &kp C_NEXT  &trans  &kp LEFT_ARROW  &kp DOWN_ARROW  &kp UP_ARROW  &kp RIGHT_ARROW  &trans  &trans  &kp END  &kp PAGE_DOWN  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &kp PRINTSCREEN  &trans  &trans
            >;
        };

        pref_layer {
            label = "BLTOPT";
            display-name = "BLT OPT";
            bindings = <
&trans  &trans  &trans  &trans  &trans  &bt BT_CLR_ALL  &trans  &trans  &trans  &trans  &trans  &trans  &bt BT_CLR  &bt BT_SEL 0  &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_SEL 3  &bt BT_SEL 4  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &studio_unlock  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans
            >;
        };
    };
};
